<form class="form-signin" action="/user/update/<%=user.id%>" method="POST">
    <h2>Hey, you're editing a user..</h2>
    <input class="form-control" value="<%=user.name%>" name="name" type='text'></input>
    <input class="form-control" type="text" value="<%=user.title%>" name="title">
    <input class="form-control" type="text" value="<%=user.email%>" name="email">
    <% if (session.authenticated && session.User.admin) { %>
	    <% if(user.admin) {%>
	    	<input type="hidden" name="admin" value="unchecked">
	    	<label class="checkbox">
	    		<input type="checkbox" name="admin" checked>Admin</label>
		<% } else { %>
			<input type="hidden" name="admin" value="unchecked">
			<label class="checkbox">
				<input type="checkbox" name="admin"> Admin</label>
		<% } %>
	<% } %>

    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Proceed">
</form>
